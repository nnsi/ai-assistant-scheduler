  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@hono/node-server": "^1.13.8",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.4",
